<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane styleClass="dialog" stylesheets="@StartDialog.css" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ensicaen.Elgama.view.StartView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" vgrow="NEVER"/>
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label alignment="CENTER" prefHeight="16.0" prefWidth="160.0" styleClass="text" text="%start.message.text"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button defaultButton="true" onAction="#onClickOnStartGame" prefWidth="200.0" text="%launch.button.text"
            GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
    <Label fx:id="_errorMessage" textFill="#ef0000" GridPane.columnIndex="0" GridPane.columnSpan="2"
           GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
</GridPane>
